<header class="header-contents">
  <nav class="navbar navbar-expand-lg navbar-light bg-light ">
    <%= link_to t(".title"), homes_path, class: "navbar-brand" %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= search_form_for @q, class: "form-inline my-2 my-lg-0" do |f| %>
      <%= f.search_field :nut_id_or_genre_id_cont, class: "form-control mr-sm-2 ml-5" %>
      <%= f.submit t(".search"), class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <%= link_to t(".New Post"), new_post_path, class: "nav-link" %>
        <% if user_signed_in? %>
          <li class="nav-item mr-3">
            <%= link_to t(".Account"), edit_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item"> 
            <%= link_to t(".log_out"), destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li> 
        <% else %>
          <li class="nav-item">
            <%= link_to t(".Sign up"), new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".log_in"), new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>