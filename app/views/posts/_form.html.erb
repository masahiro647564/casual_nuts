<%= form_with model: post, local: true do |form| %>
  <%= render 'shared/errors', obj: post %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :new_image %>
    <%= form.file_field :new_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :nut_id %>
    <%= form.collection_select :nut_id, Nut.all, :id, :name, { include_blank: t(".include_blank") }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :genre_id %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name, { include_blank: t(".include_blank") }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>